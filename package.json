{
  "name": "clean-node-api",
  "version": "2.3.0",
  "main": "index.js",
  "author": "aleksandersousa <aleksander-ssousa@outlook.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "dev": "yarn build && docker compose up",
    "test": "jest --passWithNoTests --silent --noStackTrace --no-cache --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest-unit-config.js",
    "test:integration": "yarn test --watch -c jest-integration-config.js",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage",
    "test:coveralls": "yarn test:ci && coveralls < coverage/lcov.info",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.7.0",
    "@types/supertest": "^2.0.13",
    "@types/validator": "^13.11.2",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "coveralls": "^3.1.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mockdate": "^3.0.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.4",
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.1.0",
    "nodemon": "^3.0.1",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": "18.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
